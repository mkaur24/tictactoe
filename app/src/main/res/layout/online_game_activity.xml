            android:layout_marginTop="22dp"
            android:onClick="clickedBoxOnline"
            android:tag="4" />

        <ImageView
            android:id="@+id/imageView5Online"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="22dp"
            android:onClick="clickedBoxOnline"
            android:tag="5" />

